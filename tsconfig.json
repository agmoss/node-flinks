{
  "extends": "@tsconfig/node14",
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "*": ["*", "node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*"]
}
